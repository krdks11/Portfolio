<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Submissions - Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <h1>Contact Form Submissions</h1>
        
        <div class="submissions-table">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Project Type</th>
                        <th>Budget</th>
                        <th>Timeline</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% submissions.forEach(submission => { %>
                        <tr>
                            <td><%= new Date(submission.submission_date).toLocaleDateString() %></td>
                            <td><%= submission.full_name %></td>
                            <td><%= submission.email %></td>
                            <td><%= submission.project_type %></td>
                            <td><%= submission.budget_range %></td>
                            <td><%= submission.timeline %></td>
                            <td>
                                <span class="status-badge <%= submission.status %>">
                                    <%= submission.status %>
                                </span>
                            </td>
                            <td class="action-buttons">
                                <button class="view-btn" data-id="<%= submission.id %>">
                                    <i class="fas fa-eye"></i> View
                                </button>
                                <select class="status-update" data-id="<%= submission.id %>">
                                    <option value="" disabled>Update Status</option>
                                    <option value="new" <%= submission.status === 'new' ? 'selected' : '' %>>New</option>
                                    <option value="in_progress" <%= submission.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                                    <option value="completed" <%= submission.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="archived" <%= submission.status === 'archived' ? 'selected' : '' %>>Archived</option>
                                </select>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Add Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/admin.js"></script>
</body>
</html> 